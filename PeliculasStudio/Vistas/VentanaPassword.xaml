<Window x:Class="PeliculasStudio.Vistas.VentanaPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeliculasStudio.Vistas"
        mc:Ignorable="d"
        Title="VentanaPassword" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBlock x:Name="txtMensaje" 
               Text="¿Desea confirmar esta acción?" 
               Foreground="Black" 
               FontSize="13" 
               FontWeight="Bold" 
               TextWrapping="Wrap" 
               Margin="0,0,0,15"/>

        <TextBlock Text="Introduce tu contraseña para continuar:" Foreground="White" Margin="0,0,0,5"/>
        <PasswordBox x:Name="txtPassword" Height="30" VerticalContentAlignment="Center"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Aceptar" IsDefault="True" Click="Aceptar_Click" Width="80" Margin="0,0,10,0" Background="#3498db" Foreground="White"/>
            <Button Content="Cancelar" IsCancel="True" Width="80" Background="#e74c3c" Foreground="White"/>
        </StackPanel>
    </StackPanel>
</Window>
