<UserControl x:Class="PeliculasStudio.Vistas.UC_Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PeliculasStudio.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Grid x:Name="GridPrincipal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Imagenes/FondoLogin.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Rectangle Opacity="0.85">
            <Rectangle.Fill>
                <RadialGradientBrush x:Name="FocoLuz" Center="0.5,0.4" RadiusX="1.8" RadiusY="1.8">
                    <GradientStop Color="{DynamicResource ColorFocoCentro}" Offset="0"/>
                   
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

            <Border x:Name="BorderCentral" Grid.Row="1" 
        Style="{DynamicResource EstiloBordeAnimado}"
    
        VerticalAlignment="Center" HorizontalAlignment="Center" Padding="0"
        Margin="20" Width="450">

                <Grid>

                    <local:BotonTema HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"/>

                    <StackPanel Margin="40,50,40,40">
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock x:Name="txtTitulo" Text="PELÍCULAS STUDIO" FontSize="30" FontWeight="Black" 
                                       HorizontalAlignment="Center" Foreground="{DynamicResource BrushAccionResaltado}">
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="10" Color="{DynamicResource ColorCentroDegradado}" ShadowDepth="0" Opacity="0.5"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="Iniciar Sesión" FontSize="16" Foreground="{DynamicResource BrushTextoSecundario}" 
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="Usuario" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource BrushTextoSecundario}"/>
                            <TextBox x:Name="txtUsuario" Height="40" VerticalContentAlignment="Center" Padding="10,0" 
                                     BorderBrush="{DynamicResource BrushBordeControl}" BorderThickness="0,0,0,1" 
                                     Background="{DynamicResource BrushInput}" Foreground="{DynamicResource BrushTextoPrincipal}"/>

                            <TextBlock Text="Contraseña" FontSize="14" FontWeight="SemiBold" Margin="0,20,0,8" Foreground="{DynamicResource BrushTextoSecundario}"/>
                            <PasswordBox x:Name="txtPassword" Height="40" VerticalContentAlignment="Center" Padding="10,0" 
                                         BorderBrush="{DynamicResource BrushBordeControl}" BorderThickness="0,0,0,1" 
                                         Background="{DynamicResource BrushInput}" Foreground="{DynamicResource BrushTextoPrincipal}"/>

                            
                            <Button x:Name="btnIniciarSesion" Width="300" Height="70" Cursor="Hand"  Click="btnIniciarSesion_Click" 
                                    HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="borde" CornerRadius="8" Background="Black"  
                                                BorderThickness="2" ClipToBounds="True" Cursor="">

                                            <Grid>
                                                <Grid.Clip> <!-- Esto sirve para que no desaparezcan los radios en el zoom -->
                                                    <RectangleGeometry Rect="0,0,300,70" RadiusX="8" RadiusY="8"/>
                                                </Grid.Clip>
                                                <Image x:Name="imgLogin" Source="/Assets/Imagenes/vengadores.png" Stretch="UniformToFill" 
                                                       Opacity="0.8" RenderTransformOrigin="0.5,0.5">
                                                    <Image.RenderTransform>
                                                        <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                                                    </Image.RenderTransform>
                                                </Image>

                                                <TextBlock Text="ENTRAR"  Foreground="White" FontWeight="Black" FontSize="18" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False" Cursor="Hand">
                                                    <TextBlock.Effect>
                                                        <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                                                    </TextBlock.Effect>
                                                </TextBlock>
                                            </Grid>
                                        </Border>

                                        <ControlTemplate.Resources>
                                            <Storyboard x:Key="ZoomIn">
                                                <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.1" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.1" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetName="imgLogin" Storyboard.TargetProperty="Opacity" To="1.0" Duration="0:0:0.3"/>
                                            </Storyboard>
                                            <Storyboard x:Key="ZoomOut">
                                                <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetName="imgLogin" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </ControlTemplate.Resources>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard Storyboard="{StaticResource ZoomIn}"/>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard Storyboard="{StaticResource ZoomOut}"/>
                                                </Trigger.ExitActions>
                                                
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button x:Name="btnIrARegistro" Content="¿No tienes cuenta? Regístrate" 
                                    Background="Transparent" BorderThickness="0" 
                                    Foreground="{DynamicResource BrushAccionResaltado}" Cursor="Hand" FontSize="13" 
                                    Click="btnIrARegistro_Click" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
