<UserControl x:Class="PeliculasStudio.Vistas.UC_Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PeliculasStudio.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Grid x:Name="GridPrincipal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Imagenes/FondoLogin.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Rectangle Opacity="0.85">
            <Rectangle.Fill>
                <RadialGradientBrush x:Name="FocoLuz" Center="0.5,0.4" RadiusX="1.8" RadiusY="1.8">
                    <GradientStop Color="{DynamicResource ColorFocoCentro}" Offset="0"/>
                   
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

            <Border x:Name="BorderCentral" Grid.Row="1" 
        Style="{DynamicResource EstiloBordeAnimado}"
    
        VerticalAlignment="Center" HorizontalAlignment="Center" Padding="0"
        Margin="20" Width="450">

                <Grid>

                    <ToggleButton x:Name="btnTema" Width="90" Height="35" Cursor="Hand" 
                                  HorizontalAlignment="Right" VerticalAlignment="Top"
                                  Margin="0,20,20,0" Click="btnTema_Click" Panel.ZIndex="100">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource BrushBordeControl}"/>
                                <Setter Property="Foreground" Value="{DynamicResource BrushTextoPrincipal}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="bordeTema" 
                                                    Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="1" CornerRadius="17">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock x:Name="txtIcon" Text="☀" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="TEMA" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="txtIcon" Property="Text" Value="☾"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bordeTema" Property="Background" Value="{DynamicResource BrushInput}"/>
                                                    <Setter TargetName="bordeTema" Property="BorderBrush" Value="{DynamicResource BrushAccionResaltado}"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource BrushAccionResaltado}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>

                    <StackPanel Margin="40,50,40,40">
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock x:Name="txtTitulo" Text="PELÍCULAS STUDIO" FontSize="30" FontWeight="Black" 
                                       HorizontalAlignment="Center" Foreground="{DynamicResource BrushAccionResaltado}">
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="10" Color="{DynamicResource ColorCentroDegradado}" ShadowDepth="0" Opacity="0.5"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="Iniciar Sesión" FontSize="16" Foreground="{DynamicResource BrushTextoSecundario}" 
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="Usuario" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource BrushTextoSecundario}"/>
                            <TextBox x:Name="txtUsuario" Height="40" VerticalContentAlignment="Center" Padding="10,0" 
                                     BorderBrush="{DynamicResource BrushBordeControl}" BorderThickness="0,0,0,1" 
                                     Background="{DynamicResource BrushInput}" Foreground="{DynamicResource BrushTextoPrincipal}"/>

                            <TextBlock Text="Contraseña" FontSize="14" FontWeight="SemiBold" Margin="0,20,0,8" Foreground="{DynamicResource BrushTextoSecundario}"/>
                            <PasswordBox x:Name="txtPassword" Height="40" VerticalContentAlignment="Center" Padding="10,0" 
                                         BorderBrush="{DynamicResource BrushBordeControl}" BorderThickness="0,0,0,1" 
                                         Background="{DynamicResource BrushInput}" Foreground="{DynamicResource BrushTextoPrincipal}"/>

                            <Button x:Name="btnIniciarSesion" Content="ENTRAR" Margin="0,35,0,15" Height="50" Cursor="Hand"
                                    Background="{DynamicResource BrushAccionResaltado}" Foreground="White" 
                                    FontWeight="Bold" FontSize="16" Click="btnIniciarSesion_Click">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="25"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Button x:Name="btnIrARegistro" Content="¿No tienes cuenta? Regístrate" 
                                    Background="Transparent" BorderThickness="0" 
                                    Foreground="{DynamicResource BrushAccionResaltado}" Cursor="Hand" FontSize="13" 
                                    Click="btnIrARegistro_Click" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
