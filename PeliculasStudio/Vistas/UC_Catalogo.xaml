<UserControl x:Class="PeliculasStudio.Vistas.UC_Catalogo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PeliculasStudio.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid x:Name="GridPrincipal">
        <Grid.Background>
            <RadialGradientBrush Center="0.5,0.4" RadiusX="1.5" RadiusY="1.5">
                <GradientStop Color="{DynamicResource ColorFocoCentro}" Offset="0"/>
                <GradientStop Color="{DynamicResource ColorBasePantalla}" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="20,10" CornerRadius="20" Background="{DynamicResource BrushFormulario}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="2"/>
            </Border.Effect>

            <Grid Margin="15,0" Cursor="">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Width="45" Height="45" Cursor="Hand" Click="BtnPerfil_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Border CornerRadius="25" Background="{DynamicResource BrushInput}" BorderBrush="{DynamicResource BrushAccionResaltado}" BorderThickness="2">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE2AF;" 
                                           Foreground="{DynamicResource BrushTextoPrincipal}" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform x:Name="RotarIcono" Angle="0"/>
                                    </TextBlock.RenderTransform>
                                    <TextBlock.RenderTransformOrigin>0.5,0.5</TextBlock.RenderTransformOrigin>

                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" 
                                                                                To="360" Duration="0:0:0.5"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" 
                                                                                To="0" Duration="0:0:0"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                               
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                    <Button.ContextMenu>
                        <ContextMenu>
                            <ContextMenu.Resources>
                                <Style TargetType="ContextMenu">
                                    <Setter Property="Background" Value="{DynamicResource BrushFormulario}"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource BrushBordeControl}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="HasDropShadow" Value="True"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ContextMenu">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                                        CornerRadius="10" Padding="5">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="10" Opacity="0.2" ShadowDepth="4"/>
                                                    </Border.Effect>
                                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>

                                <Style TargetType="MenuItem">
                                    <Setter Property="Foreground" Value="{DynamicResource BrushTextoPrincipal}"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="MenuItem">
                                                <Border x:Name="border" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter Content="{TemplateBinding Header}" ContentSource="Header" 
                                                                      HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsHighlighted" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource BrushInput}"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource BrushAccionResaltado}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ContextMenu.Resources>

                            <MenuItem Header="👤 Mi Perfil" Click="MenuPerfil_Click"/>

                            <Separator Background="{DynamicResource BrushSeparador}" Margin="5,2"/>

                            <MenuItem Header="🚪 Cerrar Sesión" Click="MenuCerrarSesion_Click">
                                <MenuItem.Style>
                                    <Style TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}">
                                        <Setter Property="Foreground" Value="#FF5555"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsHighlighted" Value="True">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </MenuItem.Style>
                            </MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <Button Grid.Column="1" Content="🏠 Inicio" Margin="20,0,0,0" Height="40" Width="80" Padding="20,0"
                        Foreground="{DynamicResource BrushTextoPrincipal}" Background="Transparent" BorderBrush="Transparent"
                        FontWeight="Bold" Cursor="Hand" Click="BtnIrInicio_Click">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10" 
                                    BorderThickness="1" BorderBrush="Transparent">
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Resources>
                                <Storyboard x:Key="ZoomIn">
                                    <DoubleAnimation Storyboard.TargetName="scale" 
                                                    Storyboard.TargetProperty="ScaleX" To="1.15" Duration="0:0:0.2"/>
                                    <DoubleAnimation Storyboard.TargetName="scale" 
                                                    Storyboard.TargetProperty="ScaleY" To="1.15" Duration="0:0:0.2"/>
                                </Storyboard>
                                <Storyboard x:Key="ZoomOut">
                                    <DoubleAnimation Storyboard.TargetName="scale" 
                                     Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.2"/>
                                    <DoubleAnimation Storyboard.TargetName="scale" 
                                     Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2"/>
                                </Storyboard>
                            </ControlTemplate.Resources>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource ZoomIn}"/>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard Storyboard="{StaticResource ZoomOut}"/>
                                    </Trigger.ExitActions>

                                    <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource BrushAccionResaltado}"/>
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource BrushInput}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Button.Template>
                </Button>
                

                <Border Grid.Column="2" Margin="30,10" CornerRadius="15" Background="{DynamicResource BrushInput}">
                    <Grid>
                        <TextBlock Text="🔍 Buscar película..." VerticalAlignment="Center" Margin="15,0" Foreground="{DynamicResource BrushTextoAyuda}" IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtBuscador}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBox x:Name="txtBuscador" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Padding="15,0"
                                 FontSize="14" Foreground="{DynamicResource BrushTextoPrincipal}" TextChanged="TxtBuscador_TextChanged"/>
                    </Grid>
                </Border>

                <local:BotonTema Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20,10,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Margin="0,0,0,20" Padding="15" CornerRadius="15" Background="{DynamicResource BrushFormulario}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Explorar Catálogo" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource BrushTextoPrincipal}" VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Filtrar por:" VerticalAlignment="Center" Foreground="{DynamicResource BrushTextoSecundario}" Margin="0,0,10,0"/>

                        <ComboBox x:Name="CmbGenero" Width="150" Height="35" Margin="0,0,10,0" SelectionChanged="CmbGenero_SelectionChanged"
                                  Padding="10,0" VerticalContentAlignment="Center" Background="{DynamicResource BrushInput}" BorderBrush="{DynamicResource BrushBordeControl}"/>

                        <ComboBox x:Name="CmbOrden" Width="150" Height="35" SelectedIndex="0" SelectionChanged="CmbOrden_SelectionChanged"
                                  Padding="10,0" VerticalContentAlignment="Center" Background="{DynamicResource BrushInput}" BorderBrush="{DynamicResource BrushBordeControl}">
                            <ComboBoxItem Content="Más Recientes"/>
                            <ComboBoxItem Content="Alfabético (A-Z)"/>
                            <ComboBoxItem Content="Alfabético (Z-A)"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ListaCatalogo">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="180" Height="280" Margin="10" CornerRadius="15" Background="{DynamicResource BrushFormulario}" Cursor="Hand" MouseUp="Card_MouseUp">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.15" ShadowDepth="4" Color="Black"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="70"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" CornerRadius="15,15,0,0" ClipToBounds="True">
                                        <Image Source="{Binding RutaImagenCompleta}" Stretch="UniformToFill"/>
                                    </Border>

                                    <Grid Grid.Row="1" Margin="12">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Titulo}" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource BrushTextoPrincipal}" TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding Anio}" FontSize="12" Foreground="{DynamicResource BrushTextoSecundario}"/>
                                                <TextBlock Text=" • " Foreground="{DynamicResource BrushTextoSecundario}"/>
                                                <TextBlock Text="{Binding Genero}" FontSize="12" Foreground="{DynamicResource BrushAccionResaltado}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
