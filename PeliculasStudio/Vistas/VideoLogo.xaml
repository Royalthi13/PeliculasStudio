<UserControl x:Class="PeliculasStudio.Vistas.VideoLogo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PeliculasStudio.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid Background="Black">
        <MediaElement x:Name="introPlayer" 
                      LoadedBehavior="Manual" 
                      UnloadedBehavior="Manual"
                      Stretch="UniformToFill"
                      MediaEnded="introPlayer_MediaEnded"
                      Loaded="introPlayer_Loaded"/>
        <Button Content="Saltar intro »" Click="Button_Click"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="30"
                Foreground="#88FFFFFF" Background="Transparent" BorderThickness="0" Cursor="Hand"
                FontSize="14"/>
    </Grid>
</UserControl>
