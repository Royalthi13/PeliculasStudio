<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ColorBasePantalla">#0A0A0A</Color>
    <Color x:Key="ColorFocoCentro">#1A1A1A</Color>
    <Color x:Key="ColorGrisOscuro">#1E1E1E</Color>
    <Color x:Key="ColorGrisMedio">#3F3F46</Color>

    <Color x:Key="ColorCentroDegradado">#1A1A1A</Color>

    <SolidColorBrush x:Key="BrushPantalla" Color="{StaticResource ColorBasePantalla}"/>
    <SolidColorBrush x:Key="BrushFormulario" Color="{StaticResource ColorGrisOscuro}"/>
    <SolidColorBrush x:Key="BrushInput" Color="{StaticResource ColorGrisMedio}"/>
    <SolidColorBrush x:Key="BrushPanelRequisitos" Color="#252526"/>

    <SolidColorBrush x:Key="BrushTextoPrincipal" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BrushTextoSecundario" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="BrushTextoAyuda" Color="#A9A9A9"/>

    <SolidColorBrush x:Key="BrushBordeControl" Color="#555555"/>
    <SolidColorBrush x:Key="BrushSeparador" Color="#333333"/>
    <SolidColorBrush x:Key="BrushAccionResaltado" Color="#007ACC"/>

    <SolidColorBrush x:Key="BrushMensajeError" Color="#FF4C4C"/>
    <SolidColorBrush x:Key="BrushMensajeExito" Color="#00FF00"/>

    <Style x:Key="EstiloBordeAnimado" TargetType="Border">
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Background" Value="{DynamicResource BrushFormulario}"/>

        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="#00E5FF"/>
            </Setter.Value>
        </Setter>

        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.8" Color="#00E5FF"/>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                        <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                        To="#6C63FF" Duration="0:0:4">
                            <ColorAnimation.EasingFunction>
                                <SineEase EasingMode="EaseInOut"/>
                            </ColorAnimation.EasingFunction>
                        </ColorAnimation>

                        <ColorAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Color)"
                                        To="#6C63FF" Duration="0:0:4">
                            <ColorAnimation.EasingFunction>
                                <SineEase EasingMode="EaseInOut"/>
                            </ColorAnimation.EasingFunction>
                        </ColorAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="BotonNeon" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#00E5FF"/>
        <Setter Property="BorderBrush" Value="#00E5FF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="15,5"/>
        <Setter Property="Margin" Value="5,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="borde"
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect Color="#00E5FF" BlurRadius="5" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="borde" Property="Background" Value="#00E5FF"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter TargetName="borde" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#00E5FF" BlurRadius="20" ShadowDepth="0" Opacity="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>