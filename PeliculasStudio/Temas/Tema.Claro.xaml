<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ColorBasePantalla">#C8DCEF</Color>
    <Color x:Key="ColorFocoCentro">#FFFFFF</Color>

    <Color x:Key="ColorCentroDegradado">#FFFFFF</Color>

    <SolidColorBrush x:Key="BrushPantalla" Color="{StaticResource ColorBasePantalla}"/>
    <SolidColorBrush x:Key="BrushFormulario" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BrushInput" Color="#F9F9F9"/>
    <SolidColorBrush x:Key="BrushPanelRequisitos" Color="#F9F9F9"/>

    <SolidColorBrush x:Key="BrushTextoPrincipal" Color="#333333"/>
    <SolidColorBrush x:Key="BrushTextoSecundario" Color="#666666"/>
    <SolidColorBrush x:Key="BrushTextoAyuda" Color="#888888"/>

    <SolidColorBrush x:Key="BrushBordeControl" Color="#ABAdB3"/>
    <SolidColorBrush x:Key="BrushSeparador" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="BrushAccionResaltado" Color="#007ACC"/>

    <SolidColorBrush x:Key="BrushMensajeError" Color="#D32F2F"/>
    <SolidColorBrush x:Key="BrushMensajeExito" Color="Green"/>

    <Style x:Key="EstiloBordeAnimado" TargetType="Border">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Background" Value="{DynamicResource BrushFormulario}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="40" ShadowDepth="0" Opacity="0.3" Color="Black"/>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="BotonNeon" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource BrushTextoPrincipal}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBordeControl}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="15,5"/>
        <Setter Property="Margin" Value="5,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="borde"
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="15">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="borde" Property="Background" Value="#E0E0E0"/>
                            <Setter TargetName="borde" Property="BorderBrush" Value="#333333"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="borde" Property="Background" Value="#D0D0D0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>